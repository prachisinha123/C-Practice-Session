$dimensions['product_weight']=$request->product_weight;
$dimensions['product_length']=$request->product_length;
$dimensions['product_breadth']=$request->product_breadth;
$dimensions['product_height']=$request->product_height;
$product->dimensions=json_encode($dimensions);
$product->save();


